#include<stdio.h> 
#include<conio.h> 
Struct DonThuc 
{ 
        float a;
        int n; 
}
typedef Struct DonThuc DONTHUC; 
void NhapDonThuc(DONTHUC &); 
void XuatDonThuc(DONTHUC); 
void NhapDonThuc(DONTHUC &dt) 
{ 
         float p;
         printf("\nNhap he so: "); 
         scanf("%f", &p); 
         dt.a = p; 
         printf("\nNhap bac don thuc: "); 
         scanf("%d", &dt.n); 
} 
void XuatDonThuc(DONTHUC dt)
{
        printf("%f, %d", dt.a, dt.n); 
} 
int main() 
{ 
       DONTHUC dt; 
       NhapDonThuc(dt); 
       XuatDonThuc(dt); 
       return 0;
}
