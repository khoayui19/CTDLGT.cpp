#include<stdio.h> 
#include<conio.h> 
Struct DaThuc 
{ 
      float a[100];
      int n; 
} 
typedef Struct DaThuc DATHUC; 
void NhapDaThuc(DATHUC &); 
void XuatDaThuc(DATHUC); 
void NhapDaThuc(DATHUC &dt) 
{ 
     printf("\nNhap bac da thuc: "); 
     scanf("%d", &dt.n); 
     for(int i = dt.n; i >= 0; i--)
{ 
     float p; 
     printf("\nNhap he so: "); 
     scanf("%f", &p); 
     dt.a[i] = p; 
}
void XuatDaThuc(DATHUC dt) 
{ 
     for(int i = dt.n; i >= 0; i--)
{ 
     printf("%f,%d + ", dt.a[i], i); 
} 
int main() 
{  
    DATHUC dt; 
    NhapDaThuc(dt); 
    XuatDaThuc(dt); 
    return 0; 
}
